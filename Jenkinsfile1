pipeline {
    agent any
    stages {
        stage('Checkout SCM') {
            steps {
                git url: 'https://github.com/20BQ1A0458/hello-world-jenkins-new.git'
            }
        }
        stage('Build') {
            steps {
                echo 'Building the project...'
                // Replace with your actual build command
                sh 'mvn clean install'  
            }
        }
        stage('Test') {
            steps {
                echo 'Running tests...'
                // Replace with your actual testing command
                sh 'pytest'
            }
        }
        stage('Deploy') {
            steps {
                echo 'Deploying the project...'
                // Replace with your actual deployment command
                sh 'docker build -t myapp . && docker run -d -p 8080:8080 myapp'
            }
        }
    }
    post {
        success {
            echo 'Build succeeded!'
        }
        failure {
            echo 'Build failed!'
        }
    }
}
